package assignment;

import java.util.Scanner;

public class GlobalWarmingQuiz {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int correctAnswers = 0;

        System.out.println("Welcome to the Global Warming Quiz!");
        System.out.println("Please enter the corresponding number (1-4) for your answer.");

        // Question 1
        System.out.println("1. What is the primary greenhouse gas responsible for global warming?");
        System.out.println("a) Oxygen (O2)");
        System.out.println("b) Nitrogen (N2)");
        System.out.println("c) Carbon Dioxide (CO2)");
        System.out.println("d) Hydrogen (H2)");
        System.out.print("Your answer: ");
        int answer1 = scanner.nextInt();
        if (answer1 == 3) {
            correctAnswers++;
        }

        // Question 2
        System.out.println("2. Which of the following is considered a natural contributor to climate change?");
        System.out.println("a) Volcanic eruptions");
        System.out.println("b) Solar activity");
        System.out.println("c) Deforestation");
        System.out.println("d) Factory emissions");
        System.out.print("Your answer: ");
        int answer2 = scanner.nextInt();
        if (answer2 == 1) {
            correctAnswers++;
        }

        // Question 3
        System.out.println("3. What is the main consequence of global warming, as claimed by climate scientists?");
        System.out.println("a) Cooling of the Earth's surface");
        System.out.println("b) Rising sea levels");
        System.out.println("c) Increased snowfall");
        System.out.println("d) Decreased carbon emissions");
        System.out.print("Your answer: ");
        int answer3 = scanner.nextInt();
        if (answer3 == 2) {
            correctAnswers++;
        }

        // Question 4
        System.out.println("4. What is the term used to describe the gradual increase in Earth's average temperature?");
        System.out.println("a) Global cooling");
        System.out.println("b) Climate stability");
        System.out.println("c) Global warming");
        System.out.println("d) Weather fluctuations");
        System.out.print("Your answer: ");
        int answer4 = scanner.nextInt();
        if (answer4 == 3) {
            correctAnswers++;
        }

        // Question 5
        System.out.println("5. Which of the following organizations shared the 2007 Nobel Peace Prize for their work on global warming?");
        System.out.println("a) Greenpeace");
        System.out.println("b) Intergovernmental Panel on Climate Change (IPCC)");
        System.out.println("c) World Health Organization (WHO)");
        System.out.println("d) ExxonMobil");
        System.out.print("Your answer: ");
        int answer5 = scanner.nextInt();
        if (answer5 == 2) {
            correctAnswers++;
        }

        // Provide feedback based on the number of correct answers
        System.out.println("Your Score: " + correctAnswers + " out of 5");

        if (correctAnswers == 5) {
            System.out.println("Excellent!");
        } else if (correctAnswers == 4) {
            System.out.println("Very good!");
        } else {
            System.out.println("Time to brush up on your knowledge of global warming.");
            System.out.println("Here are some websites for further information:");
            System.out.println("- IPCC (Intergovernmental Panel on Climate Change): https://www.ipcc.ch/");
            System.out.println("- NASA Global Climate Change: https://climate.nasa.gov/");
            System.out.println("- NOAA Climate.gov: https://www.climate.gov/");
        }

        scanner.close();
    }
}
