package assignmentg;

import java.util.Scanner;
import java.util.NoSuchElementException;
import java.util.Formatter;

public class PhoneTest {

    public static void writeIntoFile(int phoneNumber, String fname) {
        Formatter out = new Formatter(fname);
        for (int i = 1; i <= 7; i++) {
            System.out.print(i + "\n");
            out.format(i+"\n");
        }

    }

    public static void writeHelper(String filename, char[] ch1, char[] ch2, char[] ch3, char[] ch4, char[] ch5, char[] ch6, char[] ch7) {
        for (int i = 0; i < ch1.length; i++) {
            for (int j = 0; j < ch2.length; j++) {
                for (int k = 0; k < ch3.length; k++) {
                    for (int l = 0; l < ch4.length; l++) {
                        for (int m = 0; m < ch5.length; m++) {
                            for (int n = 0; n < ch6.length; n++) {
                                for (int o = 0; o < ch7.length; o++) {
                                    System.out.println("" + ch1[i] + ch2[j] + ch3[k] + ch4[l] + ch5[m] + ch6[n] + ch7[o]);
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

public class PhoneNumber {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        PhoneTest app = new PhoneTest();

        System.out.print("Enter phone number (digits greater than 1 only): ");

        try {
            int phoneNumber1 = scanner.nextInt();
            int phoneNumber2 = scanner.nextInt(); // Read a second phone number

            app.writeIntoFile(phoneNumber1, "Num.txt");
            app.writeIntoFile(phoneNumber2, "sampleout.txt");
        } catch (NoSuchElementException elementException) {
            System.err.println("Error inputting data.");
        }
    }
}


